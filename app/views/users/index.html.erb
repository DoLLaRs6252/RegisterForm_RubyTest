<div class="show-container">
<div>
    <i class="fa-solid fa-chevron-left"></i>
    <%= link_to 'Register page', "/users/new" ,class:"link"%>
</div>
<h1>Users List</h1>

<table>
  <thead>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Gender</th>
      <th>Birthday</th>
      <th>Subject</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% @user.each do |user| %>
      <tr>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.email %></td>
        <td><%= user.phone %></td>
        <td><%= user.gender %></td>
        <td><%= user.birthday %></td>
        <td><%= user.subject %></td>
        <td>
        <div class="div-button">
            <%= link_to edit_user_path(user), class: "edit-button" do %>
              <i class="fa-solid fa-pencil fa-xl" style="color: #4CAF50;"></i>
            <% end %>

             <%= form_with url: user_path(user), method: :delete, local: true do %>
                <button type="submit" class="delete-button">
                  <i class="fa-solid fa-trash fa-xl" class="icon"></i>
                </button>
            <% end %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>